{
  "name": "monorepo-demo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev.app": "cd apps/todo-app && npm run dev",
    "dev.api": "cd apps/api && npm run dev",
    "clean": "turbo run clean",
    "build": "turbo run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "turbo": "^1.0.28",
    "workspaces-run": "^1.0.1"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "outputs": ["dist/src/**", "dist/**", ".turbo/**"],
        "dependsOn": [
          "^build",
          "clean"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ]
      },
      "lint": {},
      "clean": {
        "cache": false
      },
      "dev": {
        "cache": false
      }
    }
  }
}
